/ Modal
.modal.fade(id="#{modalId}" aria-hidden="true" aria-labelledby="exampleModalLabel" tabindex="-1")
  .modal-dialog
    .modal-content
      = form_for :csv_fields, url: url , method: :get do |f|
        .modal-header
          %h5#exampleModalLabel.modal-title Pick Fields for CSV
          %button.close(aria-label="Close" data-dismiss="modal" type="button")
            %span(aria-hidden="true") Ã—
        .modal-body
          - @form = ApplicationForm.active
          - @form.sections.each do |section|
            .row.border-bottom.mt-2
              .col
                %p
                  %strong= section.title
              .col
                = f.fields_for section.title_key do |sf|
                  - section.fields.each do |field|
                    .form-group.form-check.mb-0
                      = sf.check_box field.title_key, class: 'form-check-input', checked: true
                      = sf.label field.title_key, field.title

        .modal-footer
          %button.btn.btn-secondary(data-dismiss="modal" type="button") Close
          %button.btn.btn-primary Download CSV
