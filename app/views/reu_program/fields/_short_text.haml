.row
  .col
    - if f.object.important?
      %h5= f.object.title
    - else
      = f.input :title, as: :string
  .col
    = f.input :required, as: :boolean, hint: f.object.required_hint
.row
  .col
    = f.input :description, as: :text, hint: f.object.description_hint
.row
  .col
    = f.input :format, collection: f.object.format_options, hint: f.object.format_hint
