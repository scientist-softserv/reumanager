%h1 Status

.row
  .col-2
  .col-8
    %h3 Recommenders
    .d-flex.flex-wrap
      - @applicant.recommender_info['recommenders_form'].each do |r|
        .card.mb-2.mr-2
          .card-body
            - r.each do |key, value|
              %p 
                %strong #{key}: 
                = value
            - status = @applicant.recommender_statuses.find_by_email(r['Email'])
            - if status.last_sent_at.present? && (status.last_sent_at + 1.day) > Time.current
              .alert.alert-info
                %p Notification email sent to recommender at #{status.last_sent_at.strftime('%d/%m/%Y %H:%M')}. You can only notify a recommender once every 24 hours.
            - else
              = link_to 'Resend email', recommenders_resend_path(status.id), class: 'btn btn-info btn-sm'
  .col-2

.row
  .col-2
  .col-8
    %h3 Application Information
    - @applicant.data.each do |key1, value1|
      .card.mb-2
        .card-body
          %h5.card-title= key1.capitalize
          - case value1
          - when Array 
            - value1.each do |item|
              - item.each do |k, v|
                %p
                  %strong #{k}:
                  = v
              %hr

          - when Hash 
            - value1.each do |k, v|
              %p
                %strong #{k}:
                = v
    = link_to 'Back', application_path, class: 'btn btn-outline-secondary'
  .col-2
