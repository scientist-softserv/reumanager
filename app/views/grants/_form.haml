.row
  .col-2
  .col-8
    = simple_form_for(:grant, url: {action: "create"}, html: {id: 'payment-form'}) do |f|
      - if @grant.errors.any?
        #error_explanation
          %h2
            = pluralize(@grant.errors.count, "error")
            prohibited this grant from being saved:
          %ul
            - @grant.errors.full_messages.each do |message|
              %li= message
      .field
        = f.label :grant_name
        %br/
        = f.text_field :program_title, :style => 'width: 100%;', :placeholder => "Your Program's Title"
      .field
        = f.label :subdomain
        %br/
        = f.text_field :subdomain, :style => 'width: 100%;', :placeholder => 'This will display as "yoursubdomain.reumanager.com"'
      // .form-row
      // %label{for: "card-element"}
      //   Credit or Debit Card Information
      // #card-element
      //   a Stripe Element will be inserted here.
      %br/
      .field
        = f.label :coupon_code
        %br/
        = f.text_field :coupon_code, :style => 'width: 100%;'
      / Used to display Element errors
      #card-errors{role: "alert"}
      %br/
      .actions
        = f.submit 'Submit Payment', :class => 'btn btn-ar btn-primary'
  .col-2