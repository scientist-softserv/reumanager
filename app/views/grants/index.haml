.container
  .row
    .col
      %h2 Grants
  .row
    .col
      %table.table
        %thead
          %tr
            %th Program Title
            %th Subdomain
            %th Actions
        %tbody
          - @grants.each do |grant|
            %tr
              %td= grant.program_title
              %td= grant.subdomain
              %td.actions
                = link_to 'Show', grant_path(grant)
                = link_to 'Edit', edit_grant_path(grant)
                = link_to 'Destroy', grant, method: :delete, data: { confirm: 'Are you sure?' }
      %br
      = link_to 'New Grant', new_grant_path
